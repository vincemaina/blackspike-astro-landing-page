---
import DetailsAccordion from "./DetailsAccordion.astro"
import faq from "../data/faq.json"
---

<section class="bs-container bs-mt-lg grid" id="faq">

  <!-- Title -->
  <h2 class="bs-h2 text-center md:text-left !font-black !text-6xl !text-lime-50" >
    Frequently Asked Questions
  </h2>

  <!-- FAQ -->
  <div class="grid gap-2 bs-mt-sm">

    <!-- Item -->
    { faq.map( item =>

      <DetailsAccordion question={item.question} answer={item.answer} />

    )}

  </div>

</section>
